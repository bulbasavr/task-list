<Window x:Class="TaskList.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskList.Views"
        xmlns:vm="clr-namespace:TaskList.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="550"
        Width="420">
    
    <Window.DataContext>
        <vm:DataTaskVM/>
    </Window.DataContext>

    <Grid HorizontalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource = "{Binding AllTasks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  BorderThickness="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date Of Creation"
                                    DisplayMemberBinding="{Binding Path=SomeData}"
                                    Width="150"/>
                    
                    <GridViewColumn Header="Is Done"
                                    Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Path=IsDone}"
                                          Margin="10,0,0,0"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Task"
                                    DisplayMemberBinding="{Binding Path=TextTask}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1">
            
            <TextBox Width="300"
                     Margin="10"
                     Text="{Binding Path=NewTextTask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Button Content="+"
                    Margin="10"
                    Width="20"
                    Height="20"
                    Command="{Binding AddCommand}"/>

            <Button Content="-"
                    Margin="10"
                    Width="20"
                    Height="20"
                    Command="{Binding DeleteCommand}"/>

        </StackPanel>

    </Grid>
</Window>
